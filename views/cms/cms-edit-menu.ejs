<!doctype html>
  <head>
    <%- include('../template/head') %>
  </head>
<html>
  <%- include('../template/navbar') %>
  <div class="container">
    <% if (errorMessage.length > 0) { %>
      <div class="alert alert-danger mt-3" role="alert">
        <h5><%= errorMessage %></h5>
      </div>
    <% } %>
  </div>
  <% if (username === 'admin') { %>
    <form action="/cms/edit-menu/<%= menu.id %>" method="POST">
      <div class="container-fluid mt-5 mx-auto align-items-center justify-content-center" style="width:1200px;">
        <div class="input-group mx-auto" style="width:600px;">
          <span class="input-group-text" style="width:100px;">Item</span>
          <input name="item" type="text" class="form-control" value="<%= menu.item %>">
        </div>
        <div class="input-group mx-auto" style="width:600px;">
          <span class="input-group-text" style="width:100px;">Price</span>
          <input name="price" type="text" class="form-control" value="<%= menu.price %>">
        </div>
        <div class="input-group mx-auto" style="width:600px;">
          <span class="input-group-text" style="width:100px;">Photo</span>
          <input name="photo" type="text" class="form-control" value="<%= menu.photo %>">
        </div>
        <div class="d-grid justify-content-center">
          <button type="submit" class="my-2 btn btn-primary">Submit</button>
        </div>
      </div>
    </form>
  <% } %>
</html>
